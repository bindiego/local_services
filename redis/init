#!/bin/bash -ex

pwd=`pwd`

[ -d data ] || mkdir data

docker run --name redis \
  -p 46379:6379 \
  -v ${pwd}/data:/data \
  --restart=unless-stopped \
  -m 256M --memory-swap -1 \
  --cpuset-cpus="0,1" \
  -d redis:6.2-alpine \
  redis-server #/usr/local/etc/redis/redis.conf
  #-v ${pwd}/redis.conf:/usr/local/etc/redis/redis.conf \
